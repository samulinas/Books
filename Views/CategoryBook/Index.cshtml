@model IEnumerable<Books.Models.CategoryBook>

@{
    ViewData["Title"] = "Виведення категорій";
}

<h1 class="text-primary">Виведення категорій</h1>
<br>
<a class="btn btn-info" asp-controller="CategoryBook" asp-action="Create"><i class="fa-solid fa-plus"></i> Додання нової категорії</a>
<br><br>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Назва категорії</th>
            <th>Порядок відображення</th>
            <th>Дії</th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a class="btn btn-primary" asp-controller="CategoryBook" asp-route-Id="@obj.CategoryId" asp-action="Update"><i class="fa-solid fa-pen-to-square"></i> Редагувати</a>
                    <a class="btn btn-danger" asp-controller="CategoryBook" asp-route-Id="@obj.CategoryId" asp-action="Delete"><i class="fa-solid fa-trash"></i> Видалити</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>Категорій не існує!</p>
}